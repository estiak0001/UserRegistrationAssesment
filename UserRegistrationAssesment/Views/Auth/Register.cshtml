
@model UserRegistrationAssesment.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<h1>Register</h1>

<form method="post" asp-controller="Auth" asp-action="Register">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-2">
                <label asp-for="Username" style="font:bold">User Name</label>
                <input asp-for="Username" type="text" class="form-control" id="txtUserName" placeholder="Enter User Name">
                <span asp-validation-for="Username" style="color:red"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="FullName">Full Name</label>
                <input asp-for="FullName" type="text" class="form-control" id="txtFullName" placeholder="Enter Full Nmae">
                <span asp-validation-for="FullName" style="color:red"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-control" id="txtEmail" aria-describedby="emailHelp" placeholder="Enter email">
                <span asp-validation-for="Email" style="color:red"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Mobile">Mobile Number</label>
                <input asp-for="Mobile" type="number" class="form-control" id="txtMobileNumber" placeholder="Enter Mobile Number">
                <span asp-validation-for="Mobile" style="color:red"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Address">Address</label>
                <textarea asp-for="Address" type="text" class="form-control" id="txtAddress" placeholder="Enter Address"></textarea>
                <span asp-validation-for="Address" style="color:red"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                <span asp-validation-for="Password" style="color:red"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                <span asp-validation-for="ConfirmPassword" style="color:red"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>

            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        </div>
    </div>
</form>