@using UserRegistrationAssesment.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<link href="~/css/loginpage.css" rel="stylesheet" />

@if (ViewBag.IsSuccess)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}
<div class="row">
    <div class="col-md-12">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1" style="border: 1px solid;padding: 10px;border-radius: 8px;">
                <form method="post" asp-controller="Auth" asp-action="LogIn" class="">
                    <div class="d-flex flex-row align-items-center mb-2">
                        <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="forUsername">Username</label>
                            <input asp-for="UsernameOrEmail" type="text" id="forUsername" class="form-control" />
                            <span class="text-danger" asp-validation-for="UsernameOrEmail"></span>
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="forPassword">Password</label>
                            <input asp-for="Password" type="password" id="forPassword" class="form-control" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                        <button type="submit" class="btn btn-primary btn-lg">Login</button>
                    </div>
                </form>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            </div>
        </div>
    </div>
</div>
